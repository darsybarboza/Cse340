<%# The Content Heading %>
<% if (title) { %>
    <h1><%= title %></h1>
    <% } else {
        res.redirect('/')
    } %>
    
<%- messages() %>
<% if (errors) { %>
    <ul class="notice">
        <% errors.array().forEach(error => { %>
            <li><%= error.msg %></li>
        <% }) %>
    </ul>
<% } %>

<form id="add-inventory-form" method="post">
    <label>Classification<%- classificationList %></label>
    <label>Make<input type="text" name="inv_make" class="add-inventory-input" required value="<%= locals.inv_make %>"></label>
    <label>Model<input type="text" name="inv_model" class="add-inventory-input" required value="<%= locals.inv_model %>"></label>
    <label><textarea id="add-inventory-desc" name="inv_description" class="add-inventory-input" placeholder="Vehicle Description" value="<%= locals.inv_make %>"></textarea></label>
    <label>Image Path<input type="text" name="inv_image" class="add-inventory-input" placeholder="/images/vehicles/no-image.png" required value="<%= locals.inv_make %>"></label>
    <label>Thumbnail Path<input type="text" name="inv_thumbnail" class="add-inventory-input" placeholder="/images/vehicles/no-image.png" required value="<%= locals.inv_make %>"></label>
    <label>Price<input type="text" name="inv_price" class="add-inventory-input" pattern="[0-9]+" required value="<%= locals.inv_make %>"></label>
    <label>Year<input type="text" name="inv_year" class="add-inventory-input" pattern="\d{4}" required value="<%= locals.inv_make %>"></label>
    <label>Miles<input type="text" name="inv_miles" class="add-inventory-input" pattern="[0-9]+" required value="<%= locals.inv_make %>"></label>
    <label>Color<input type="text" name="inv_color" class="add-inventory-input" required value="<%= locals.inv_make %>"></label>
    <div class="button-holder">
        <button class="add-inventory-button">Add Vehicle</button>
    </div>
</form>