<% if (title) { %>
    <h1><%= title %></h1>
    <% } else {
        res.redirect('/')
    } %>
    
<%- messages() %>
<% if (errors) { %>
    <ul class="notice">
        <% errors.array().forEach(error => { %>
            <li><%= error.msg %></li>
        <% }) %>
    </ul>
<% } %>

<form action="/account/registration" method="post" id="registration-form">
    <label>First name<input type="text" name="account_firstname" class="registration-input" required value="<%= locals.account_firstname %>"></label>
    <label>Last name<input type="text" name="account_lastname" class="registration-input" required value="<%= locals.account_lastname %>"></label>
    <label>Email:<input type="email" name="account_email" class="registration-input" required value="<%= locals.account_email %>" placeholder="Enter a valid email address"></label>
    <span>Passwords must be at least 12 characters and contain at least 1 number, 1 capital letter and 1 special character</span> 
    <label>Password:<input type="password" name="account_password" class="registration-input" required pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$"></label>
    <div class="button-holder">
        <button class="registration-button">Register!</button>
    </div>
</form>