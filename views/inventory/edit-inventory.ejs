<%# The Content Heading %>
<% if (title) { %>
    <h1><%= title %></h1>
    <% } else {
        res.redirect('/')
    } %>
    
<%- messages() %>
<% if (errors) { %>
    <ul class="notice">
        <% errors.array().forEach(error => { %>
            <li><%= error.msg %></li>
        <% }) %>
    </ul>
<% } %>

<form id="updateForm" class="inventory-form" action="/inv/update" method="post">
    <label>Classification<%- classificationList %></label>
    <label>Make<input type="text" name="inv_make" class="inventory-input" required value="<%= locals.inv_make %>"></label>
    <label>Model<input type="text" name="inv_model" class="inventory-input" required value="<%= locals.inv_model %>"></label>
    <label><textarea id="inventory-desc" name="inv_description" class="inventory-input" placeholder="Vehicle Description" value="<%= locals.inv_description %>"></textarea></label>
    <label>Image Path<input type="text" name="inv_image" class="inventory-input" placeholder="/images/vehicles/no-image.png" required value="<%= locals.inv_image %>"></label>
    <label>Thumbnail Path<input type="text" name="inv_thumbnail" class="inventory-input" placeholder="/images/vehicles/no-image.png" required value="<%= locals.inv_thumbnail %>"></label>
    <label>Price<input type="text" name="inv_price" class="inventory-input" pattern="[0-9]+" required value="<%= locals.inv_price %>"></label>
    <label>Year<input type="text" name="inv_year" class="inventory-input" pattern="\d{4}" required value="<%= locals.inv_year %>"></label>
    <label>Miles<input type="text" name="inv_miles" class="inventory-input" pattern="[0-9]+" required value="<%= locals.inv_miles %>"></label>
    <label>Color<input type="text" name="inv_color" class="inventory-input" required value="<%= locals.inv_color %>"></label>
    <div class="button-holder">
        <button type="submit" class="inventory-button" disabled>Update Vehicle</button>
    </div>
    <input type="hidden" name="inv_id"
    <% if(locals.inv_id) { %> value="<%= locals.inv_id %>"
    <% } %>>
    <script src="../../js/inv-update.js"></script>
</form>